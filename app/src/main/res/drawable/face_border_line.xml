<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <solid android:color="#FFDF2B"/> <!-- border color -->
        </shape>
    </item>

    <item
        android:bottom="10dp"
        android:top="10dp"
        android:left="10dp"
        android:right="10dp">
        <!-- adjust borders width here -->
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <solid android:color="#FFFFFF"/>  <!-- semi-transparent white background color -->
        </shape>
    </item>
</layer-list>
